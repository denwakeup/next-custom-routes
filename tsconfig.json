{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "./dist",
        "declaration": true,
        "downlevelIteration": true,
        "target": "ES5"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/__tests__/*"]
}
